<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".MainActivity"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="25dp"
        android:paddingHorizontal="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/primerNro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0"
                android:textSize="50dp"
                android:gravity="right"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/operacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="?"
                android:textSize="50dp"
                android:textColor="@color/blanco"/>
            <TextView
                android:id="@+id/segundoNro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0"
                android:textSize="50dp"
                android:textColor="@color/blanco"/>
        </LinearLayout>
        <Button
            android:id="@+id/generarNumero"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:background="@color/gnumero"
            android:textColor="@color/blanco"
            android:text="GENERAR NÚMERO"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/sumar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="+"
                android:textSize="47dp"
                android:textColor="@color/blanco"
                android:background="@color/mas"
                />
            <Button
                android:id="@+id/restar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="-"
                android:textSize="47dp"
                android:textColor="@color/blanco"
                android:background="@color/menos"
                />
            <Button
                android:id="@+id/resetear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="C"
                android:textSize="47dp"
                android:textColor="@color/blanco"
                android:background="@color/c"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/multiplicar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="X"
                android:textSize="47dp"
                android:textColor="@color/blanco"
                android:background="@color/x"
                />
            <Button
                android:id="@+id/dividir"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="/"
                android:textSize="47dp"
                android:textColor="@color/blanco"
                android:background="@color/div"
                />
        </LinearLayout>

        <Button
            android:id="@+id/resultadoPar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/par"
            android:textColor="@color/blanco"
            android:text="¿RESULTADO ES PAR?"/>

        <Button
            android:id="@+id/resultadoPrimo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/primo"
            android:textColor="@color/blanco"
            android:text="¿RESULTADO ES PRIMO?"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/resultado"
            android:textColor="@color/blanco"
            android:text="RESULTADO"/>
        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/result"
            android:textColor="@color/blanco"
            android:text="0"/>
        <TextView
            android:id="@+id/resultadoText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/resultado"
            android:textColor="@color/blanco"
            android:text="ES PAR"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>

